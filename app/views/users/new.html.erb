<%= form_for @user, :html => { multipart: true, :class => "form-horizontal center"} do |f| %>

<div class="col-md-8">
  <%= f.text_field :business_name, placeholder: "Business Name", class: "form-control" %>
</div>

<div class="col-md-8">
  <%= f.text_field :permit_id, placeholder: "Permit ID", class: "form-control" %>
</div>

<div class="col-md-8">
  <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
</div>

<div class="col-sm-12">
  <h4> Paste a link for your logo or upload a file</h4>
  <%= f.text_field :logo, placeholder: "Logo", class: "form-control" %>
</div>

<div class="col-md-8">
  <%= f.file_field :avatar %>
</div>
<div class="col-md-8">
  <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
</div>
<div class="col-md-8">
  <%= f.submit "Sign Up", class: "btn btn-default btn-primary" %>
</div>
<% end %>
