<%= form_for @truck, html: { multipart: true}  do |f| %>
  <div>
    <%= f.text_field :truck_name, placeholder: "Truck Name" %>
  </div>
  <div>
    <%= f.text_field :phone_number, placeholder: "Phone Number" %>
  </div>
  <div>
    Is Cash Only? <%= f.check_box :is_cash_only, {}, "true", "false" %>
  </div>
  <div>
    <%= f.text_area :info, placeholder: "Food Truck info" %>
  </div>
  <div>
    <%= f.text_field :category, placeholder: "category" %>
  </div>
  <div>
    <p>
      You may post a link or upload a truck picture
    </p>
    <%= f.text_field :picture, placeholder: "Truck Picture" %>
  </div>
  <div>
    <%= f.file_field :truck_image %>
  </div>
  <%= f.submit %>
<% end %>
