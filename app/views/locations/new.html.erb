<div class="col-xs-2"></div>
<div class="col-xs-8">
  <%= form_for [@truck, @location] do |f| %>
  <div class="col-sm-8">
    <%= f.text_field :address, placeholder: "Address", class: "form-control" %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :hours, placeholder: "Hours", class: "form-control" %>
  </div>
  <div class="col-sm-8">
    <%= f.submit "Add", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
<div class="col-xs-2"></div>
