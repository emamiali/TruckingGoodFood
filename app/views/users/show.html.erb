<div class="col-xs-6 user_show">
  <%= image_tag @user.logo unless @user.logo.blank? %>
  <%= image_tag @user.avatar.url(:medium), class: "user_show_avatar" %>
  <br>
  Welcome:
  <strong><%= @user.business_name %></strong>
  <br>
  Email:
  <%= @user.email %>
  <br>
  Permit ID:
  <%= @user.permit_id %>
  <br>
  <br>
  <%= link_to "Edit Your Profile", edit_user_path(@user) %>
  <br>
  <br>
</div>
<div class="col-xs-6 user_truck">

  <% @trucks.each do |truck| %>
  <div class="user_truck_card">
    <div>
      <%= image_tag truck.picture, :class => "user_truck_image" unless truck.picture.blank? %>
    </div>
    <span><%= truck.truck_name %></span>
    <br>
    <%= link_to "More Info", truck_path(truck.id) %>
    <br>
    <%= link_to "Edit", edit_truck_path(truck.id), {:class => "btn btn-primary"} %>
    <%= link_to "Delete", truck, method: :delete, :class => "btn btn-danger", data: { confirm: "Are you sure you want to delete this truck?"} %>
    <br>
  </div>
  <% end %>
  <%= link_to 'Add a new Truck', new_truck_path, class: "btn btn-primary" %>
</div>
